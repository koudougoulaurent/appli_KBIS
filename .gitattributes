# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf

# Django templates
*.html text eol=lf

# CSS files
*.css text eol=lf

# JavaScript files
*.js text eol=lf

# Markdown files
*.md text eol=lf

# Configuration files
*.txt text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf

# Documentation
*.rst text eol=lf

# Scripts
*.sh text eol=lf
*.bat text eol=crlf

# Binary files (should not be modified)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.rar binary
*.sqlite3 binary
*.db binary

# Archives
*.zip binary
*.tar.gz binary
*.rar binary

# Database files
*.sqlite3 binary
*.db binary
*.sql text eol=lf

# Logs
*.log text eol=lf

# Environment files
.env* text eol=lf

# Git files
.gitignore text eol=lf
.gitattributes text eol=lf
