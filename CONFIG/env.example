# Configuration de production pour KBIS IMMOBILIER
# Copiez ce fichier vers .env et configurez les valeurs

# Configuration de sécurité
SECRET_KEY=your-secret-key-here
DEBUG=False

# Configuration des hôtes autorisés
ALLOWED_HOSTS=localhost,127.0.0.1,votre-domaine.com,www.votre-domaine.com

# Configuration de la base de données PostgreSQL
DB_NAME=kbis_immobilier
DB_USER=kbis_user
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432

# Configuration Redis (optionnel)
REDIS_URL=redis://127.0.0.1:6379/1

# Configuration email
EMAIL_HOST=smtp.votre-fournisseur.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@votre-domaine.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@votre-domaine.com

# Configuration Sentry (optionnel)
SENTRY_DSN=your-sentry-dsn-here